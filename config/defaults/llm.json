{
    "model": {
        "name": "gpt2",
        "max_length": 100,
        "temperature": 0.7,
        "optimization": {
            "attention_slicing": true,
            "kv_caching": true,
            "tensor_parallelism": false,
            "batch_size": 1,
            "max_length": 512,
            "quantization": false,
            "gradient_checkpointing": false
        }
    },
    "memory": {
        "max_history": 1000,
        "relevance_threshold": 0.75
    },
    "database": {
        "type": "sqlite",
        "path": "data/llm.db"
    },
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s | %(levelname)s | [%(name)s] %(message)s",
        "file": "logs/llm.log"
    }
}
